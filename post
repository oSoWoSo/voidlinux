#!/bin/bash
# Void Linux post-install script

echo "						Starting Void Linux post-install script..."
echo "						You can skip script pressing ctrl + c"
sleep 1s

sudo xbps-install -S
sudo xbps-install libxbps xbps void-repo-nonfree void-repo-multilib void-repo-multilib-nonfree

echo "						Updating system..."
sleep 1s
sudo xbps-install -Syu

echo "						Installing drivers..."
sleep 1s
sudo xbps-install nvidia
sudo xbps-install xorg-minimal
sudo xbps-install slim slim-void-theme
sudo xbps-install ntfs-3g mtools

echo "						Installing vpm and vsv for manage packages and services"
sleep 1s
sudo xbps-install vsv git
git clone git://github.com/zen0bit/vpm.git
sudo xbps-install vpsm

echo "						Installing openbox"
sleep 1s
sudo xbps-install openbox

echo "						Installing editors"
sleep 1s
sudo xbps-install nano geany

echo "						Installing browser"
sleep 1s
sudo xbps-install firefox

echo "						Installing essentials"
sleep 1s
sudo xbps-install fish-shell gparted xarchiver neofetch

echo "						Installing virtualisation"
sleep 1s

sudo xbps-install virt-manager libvirt qemu
echo "						Installing needed services...."
sleep 1s
sudo ln -s /etc/sv/libvirtd /var/service
sudo ln -s /etc/sv/virtlockd /var/service
sudo ln -s /etc/sv/virtlogd /var/service

echo "						Configuring system...."
sleep 1s
sudo gpasswd -a "$USER" libvirt

echo "						Removing orphaned packages...."
sleep 1s
sudo xbps-remove -Oo
clear
neofetch

echo "						Restart your computer and enjoy Void linux...."
