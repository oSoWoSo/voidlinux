#!/bin/bash
# Void Linux post-install script
echo defaults.ctl.card 1; 	>> ~/.asoundrc
echo defaults.pcm.card 1; 	>> ~/.asoundrc
echo exec openbox-session 	>> ~/.xinitrc
echo tint2 &              	>> ~/.config/openbox/autostart
echo setxkbmap cz &       	>> ~/.config/openbox/autostart
echo nitrogen --restore & 	>> ~/.config/openbox/autostart
echo volumeicon &         	>> ~/.config/openbox/autostart
echo conky &              	>> ~/.config/openbox/autostart
obmenu-generator -p -i -u -d -c
